---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Projects from '../components/Projects.astro';
import Experience from '../components/Experience.astro';
import BriefCase from '../components/icons/BriefCase.astro';
import CodeIcon from '../components/icons/Code.astro';
import About from '../components/About.astro';
import ProfileCheck from '../components/icons/ProfileCheck.astro';
import Hero from '../components/Hero.astro';
import TitleSection from '../components/TitleSection.astro';
---

<Layout title="Portfolio de Jose Julian Martinez de la Cruz - Desarrollador y Programador Web" description="Contrata a Julian, un desarrollador web apasionado por la tecnología y la programación. Con experiencia en HTML, CSS, JavaScript y frameworks modernos, estoy listo para llevar tus proyectos al siguiente nivel. ¡Hablemos!">
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<Hero />
			<slot />
		</SectionContainer>
		<SectionContainer id="experience">
			<TitleSection>
				<BriefCase class="size-8" />
				Experiencia laboral
			</TitleSection>
			<Experience />
		</SectionContainer>

		<div class="space-y-24">
			<SectionContainer id="projects">
				<TitleSection>
					<CodeIcon class="size-8" />
					Proyectos
				</TitleSection>
				<Projects />
			</SectionContainer>
			
			<SectionContainer id="about-me">
				<TitleSection>
					<ProfileCheck class="size-8" />
					Sobre mí
				</TitleSection>
				<About />
			</SectionContainer>
		</div>
	</main>
</Layout>
